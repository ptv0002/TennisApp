@model IEnumerable<Models.Thong_Bao>

@{
    ViewData["Title"] = "Danh sách thông báo";
    ViewBag.AActive = "active";
}
<div class="fixed-bar">
    <a asp-action="AnnouncementUpdate" class="btn btn-success">Thêm mới</a>
</div>
<div class="card shadow mb-4">
    <div class="card-body">
        <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
            <div class="table-responsive">
                <table class="table dataTable" id="normalTable">
                    <thead>
                        <tr>
                            <th></th>
                            <th>
                                @Html.DisplayNameFor(model => model.Ten)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Ngay)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Hien_Thi)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Tin_Nong)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var arg = new Tennis_Web.Controllers.MethodController.ConfirmViewModal()
                            {
                                BtnMsg = "Xóa",
                                Message = "xóa thông báo " + item.Ten,
                                ActionName = "DeleteAnnouncement",
                                ControllerName = "File",
                                Id = item.Id.ToString()
                            };
                            <tr>
                                <td>
                                    <button type="button" class="btn btn-danger" data-toggle="ajax-modal" data-target="#confirmModal" data-url="@Url.Action("ConfirmModal", "Method", arg)">
                                        <i class="fa fa-trash small-icon"></i>
                                    </button>
                                </td>
                                <td>
                                    <a asp-action="AnnouncementUpdate" asp-route-id="@item.Id">@item.Ten</a>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Ngay)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Hien_Thi)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Tin_Nong)
                                </td>
                            </tr>

                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th></th>
                            <th>
                                @Html.DisplayNameFor(model => model.Ten)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Ngay)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Hien_Thi)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Tin_Nong)
                            </th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- Modal placeholder -->
<div id="modal-placeholder"></div>