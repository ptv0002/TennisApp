            <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
        </div>*@
    <div class="card-body">
        <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
            @*<div class="row mb-3">
                <div class="col-sm-6">
                    <a asp-action="Update" class="btn btn-primary">Thêm mới</a>
                </div>
                <div class="col-sm-6">
                    <div id="dataTable_filter" class="dataTables_filter mr-4" style="position: absolute; right: 0;">
                        <dl class="row">
                            <dd>
                                Search:
