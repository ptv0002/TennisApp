@model Models.DS_Cap 
<form asp-action="UpdatePair">
    <div class="modal fade show" id="updatePair" tabindex="-1" role="dialog" aria-labelledby="editLabel" aria-hidden="true" style="display: none">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editLabel">Thông tin cặp</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <input type="hidden" asp-for="ID_Trinh" />
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label class="font-weight-bold">VĐV 1</label>
                        <input type="search" asp-for="VDV1.Ten_Tat" list="list" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label class="font-weight-bold">VĐV 2</label>
                        <input type="search" asp-for="VDV2.Ten_Tat" list="list" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label class="font-weight-bold">Mã cặp</label>
                        <input type="text" asp-for="Ma_Cap" class="form-control" />
                    </div>
                    <datalist id="list">
                        @foreach (var item in ViewBag.DS_VDV)
                        {
                            <option>@item.Ten_Tat</option>
                        }
                    </datalist>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Hủy</button>
                    <button class="btn btn-success" type="submit">Lưu thay đổi</button>
                </div>
            </div>
        </div>
    </div>
</form>
