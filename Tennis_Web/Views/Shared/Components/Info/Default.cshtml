@{
    bool a1 = ViewBag.IsCurrent == true;
    int count = 0;
    string a2 = "tablerow" + count;
}
@model Models.DS_Giai
<form asp-action="UpdateInfo">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="Id" type="hidden" />
    <dl class="row">
        <dt class="col-sm-2 font-weight-bold">
            Tên
        </dt>
        <dd class="col-sm-10">
            @if (a1)
            {
                <input asp-for="Ten" class="form-control" required />
                <span asp-validation-for="Ten" class="text-danger"></span>
            }
            else
            {<input asp-for="Ten" class="form-control" disabled />}
        </dd>
        <dt class="col-sm-2 font-weight-bold">
            Ngày
        </dt>
        <dd class="col-sm-10">
            @if (a1)
            {
                <input asp-for="Ngay" class="form-control" required />
                <span asp-validation-for="Ngay" class="text-danger"></span>
            }
            else
            {<input asp-for="Ngay" class="form-control" disabled />}
        </dd>
        <dt class="col-sm-2 font-weight-bold">
            Ghi chú
        </dt>
        <dd class="col-sm-10">
            @if (a1)
            {
                <textarea asp-for="GhiChu" class="form-control"></textarea>
            }
            else
            { <textarea asp-for="GhiChu" class="form-control" disabled></textarea>}
        </dd>
        <dt class="col-sm-2 font-weight-bold">
            DS Trình
        </dt>
        <dd class="col-sm-4">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>
                            Trình
                        </th>
                        @if (a1)
                        {
                            <th></th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.DS_Trinh)
                    {
                        <tr class=@a2>
                            @if (a1)
                            {
                                <td>
                                    @item.Trinh
                                </td>
                            }
                            else
                            {
                                <td>@item.Trinh</td>

                            }
                        </tr>
                        count++;
                    }
                </tbody>
                @if (a1)
                {
                    <tfoot>
                        <tr>
                            <td><input type="text" id="txtName"/></td>
                            <td><input type="button" id="addLevel" value="Add" class="btn btn-primary"/></td>
                        </tr>
                    </tfoot>
                }
            </table>
        </dd>
    </dl>
    @if (a1)
    {
        var arg = new Tennis_Web.Controllers.MethodController.ConfirmViewModal()
        {
            BtnMsg = "Kết thúc",
            Message = "kết thúc giải đấu",
            ActionName = "EndTournament",
            ControllerName = "Tournament"
        };
        <div class="form-group">
            <input type="submit" id="saveTournament" value="Lưu thay đổi" class="btn btn-primary mr-2" formmethod="post" />
            <button type="button" class="btn btn-danger" data-toggle="ajax-modal" data-target="#confirmModal" data-url="@Url.Action("ConfirmModal", "Method", arg)">Kết thúc giải đấu</button>
        </div>
    }
</form>
