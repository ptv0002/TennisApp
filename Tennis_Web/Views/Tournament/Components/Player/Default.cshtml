@{
    bool a1 = ViewBag.IsCurrent == true;
}
@model List<Models.DS_VDV>
<form asp-action="SavePlayerState" asp-controller="Tournament">
    <div class="card shadow mb-4">
        @*<div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
            </div>*@
        <div class="card-body">
            <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                <div class="table-responsive">
                    <table class="table dataTable" id="noPaging">
                        <thead>
                            <tr>
                                <th>Tên tắt</th>
                                @if (a1)
                                {
                                    <th>Tham gia</th>
                                }
                                <th>CLB</th>
                                <th>Điểm cũ</th>
                                <th>Điểm</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Count(); i++)
                            {
                                <tr>
                                    <td>@Model[i].Ten_Tat</td>
                                    @if (a1)
                                    {
                                        <td>
                                            <input type="hidden" asp-for="@Model[i].Id" />
                                            <input type="hidden" asp-for="@Model[i].Ho" />
                                            <input type="hidden" asp-for="@Model[i].Ten" />
                                            <input type="hidden" asp-for="@Model[i].Ten_Tat" />
                                            <input type="hidden" asp-for="@Model[i].Gioi_Tinh" />
                                            <input type="hidden" asp-for="@Model[i].CLB" />
                                            <input type="hidden" asp-for="@Model[i].Khach_Moi" />
                                            <input type="hidden" asp-for="@Model[i].File_Anh" />
                                            <input type="hidden" asp-for="@Model[i].Tel" />
                                            <input type="hidden" asp-for="@Model[i].Email" />
                                            <input type="hidden" asp-for="@Model[i].Status" />
                                            <input type="hidden" asp-for="@Model[i].Diem" />
                                            <input type="hidden" asp-for="@Model[i].Diem_Cu" />
                                            <input type="hidden" asp-for="@Model[i].Chuc_Vu" />
                                            <input type="hidden" asp-for="@Model[i].Cong_Ty" />
                                            <input asp-for="@Model[i].Tham_Gia" class="form-check-input ml-3" />
                                        </td>
                                    }
                                    <td>@Model[i].CLB</td>
                                    <td>@Model[i].Diem_Cu</td>
                                    <td>@Model[i].Diem</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    @if (a1)
    {
        <div class="form-group">
            <input type="hidden" name="idGiai" value="@ViewBag.ID_Giai"/>
            <input type="submit" value="Lưu thay đổi" class="btn btn-primary" formmethod="post" />
        </div>
    }
</form>