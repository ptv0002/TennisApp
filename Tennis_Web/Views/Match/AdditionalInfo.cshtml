@{
    ViewData["Title"] = "Thêm thông tin chi tiết trước khi tạo DS trận - Giải " + ViewBag.TourName;
}
@model List<MatchGeneratorViewModel>
<hr />
<form asp-action="AdditionalInfo">
    @for (int i = 0; i < Model.Count; i++)
    {
        <input type="hidden" asp-for="@Model[i].ID_Trinh" />
        <input type="hidden" asp-for="@Model[i].Trinh" />
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h5 class="m-0 font-weight-bold text-primary">Trình @Model[i].Trinh</h5>
            </div>
            <div class="card-body">
                <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                    <div class="table-responsive">
                        <table class="table dataTable autoSum" id="table_@i" style="text-align:center">
                            <thead>
                                <tr>
                                    <th class="col-6">Bảng</th>
                                    <th>Số cặp đi tiếp</th>
                                    <th>Bảng thi Playoff 1</th>
                                    <th>Bảng thi Playoff 2</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int j = 0; j < Model[i].NumPerTable.Count; j++)
                                {
                                    <tr>
                                        <td>
                                            <input type="hidden" asp-for="@Model[i].NumPerTable[j].Table" />
                                            @Model[i].NumPerTable[j].Table
                                        </td>
                                        <td><input class="form-control col-6 num" asp-for="@Model[i].NumPerTable[j].Num" /></td>
                                        <td><input class="form-check" type="checkbox" asp-for="@Model[i].NumPerTable[j].P1" /></td>
                                        <td><input class="form-check" type="checkbox" asp-for="@Model[i].NumPerTable[j].P2" /></td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Tổng số cặp đã chọn</th>
                                    <th><input class="form-control col-6 total" id="total_@i" disabled /></th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <dl class="row">
                    <dt class="col-6 font-weight-bold">
                        Tổng cặp thi Playoff 1 (Playoff cao nhất)
                    </dt>
                    <dd class="col-6">
                        <input class="form-control col-6" asp-for="@Model[i].PlayOff1" />
                        <span asp-validation-for="@Model[i].PlayOff1" class="text-danger"></span>
                    </dd>
                    <dt class="col-6 font-weight-bold">
                        Tổng cặp thi Playoff 2 (Loại trực tiếp)
                    </dt>
                    <dd class="col-6">
                        <input class="form-control col-6" asp-for="@Model[i].PlayOff2" />
                        <span asp-validation-for="@Model[i].PlayOff2" class="text-danger"></span>
                    </dd>
                    <dt class="col-6 font-weight-bold">
                        Tổng số cặp đi tiếp
                    </dt>
                    <dd class="col-6">
                        <input class="form-control col-6" disabled />
                    </dd>
                </dl>
            </div>
        </div>
    }
    <div class="form-group">
        @if (ViewBag.Exist == true)
        {
            <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#confirmModal">Tạo danh sách trận đấu</button>
            <div class="modal fade show" id="confirmModal" tabindex="-1" role="dialog" aria-labelledby="confirmLabel" aria-hidden="true" style="display: none">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="confirmLabel">Xác nhận</h5>
                            <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">×</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            Đã có danh sách trận trong cơ sở dữ liệu! Bạn có chắc chắn muốn tạo danh sách trận đấu? Nếu tiếp tục sẽ
                            <label class="text-danger">
                                xóa danh sách trận cũ vĩnh viễn.
                            </label>
                            Hành động này không thể bị khôi phục.
                        </div>
                        <div class="modal-footer">
                            <button class="btn btn-secondary" type="button" data-dismiss="modal">Hủy</button>
                            <input type="submit" value="Tiếp tục" class="btn btn-danger" formmethod="post" asp-route-exist="true" />
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <input type="submit" value="Tạo danh sách trận đấu" class="btn btn-danger" formmethod="post" />
        }
    </div>
</form>
