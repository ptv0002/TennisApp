            $('table').on('input', '.num').each(function () {
                var sum = 0; // since you want a seperate total for each table, you should zero total for each, right ? ;)
                $(this).('tbody tr td:nth-child(2)').each(function () {
                    var get_textbox_value = $(this).val();
                    if ($.isNumeric(get_textbox_value)) {
                        sum += parseInt(get_textbox_value);
                    }
