@model Tennis_Web.Areas.NoRole.Models.RegisterViewModel
<form asp-action="Register">
    <div class="modal fade" id="register" tabindex="-1" role="dialog" aria-labelledby="label" aria-hidden="true" style="display: none">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="label">Nhập thông tin</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label class="font-weight-bold">Tên tắt</label>
                        <input type="text" asp-for="Ten_Tat" list="list" class="form-control" disabled />
                    </div>
                    @if (Model.Email == null)
                    {
                        <div class="form-group">
                            <label class="font-weight-bold">Email</label>
                            <input type="email" asp-for="Email" autocomplete="off" class="form-control" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="font-weight-bold">SĐT</label>
                            <input type="text" asp-for="Tel" class="form-control" />
                        </div>
                    }
                    <div class="form-group">
                        <label class="font-weight-bold">Mật khẩu</label>
                        <input type="password" asp-for="Password" autocomplete="off" class="form-control" required />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    @if (ViewBag.Password == "bitkhanhhoa@newuser")
                    {
                        <div class="form-group">
                            <label class="font-weight-bold">Mật khẩu mới</label>
                            <input type="password" asp-for="NewPassword" class="form-control" required />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="font-weight-bold">Xác nhận mật khẩu</label>
                            <input type="password" asp-for="ConfirmPassword" class="form-control" required />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Hủy</button>
                    <button class="btn btn-warning" type="submit">Đăng ký tham gia</button>
                </div>
            </div>
        </div>
    </div>
</form>