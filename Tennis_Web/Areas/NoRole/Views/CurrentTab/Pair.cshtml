@{
    var idCap = 0;
    Layout = "/Areas/_Layout.cshtml";
    ViewData["Title"] = "Danh sách cặp";
    ViewData["Tagline"] = ViewBag.Tournament;
    ViewBag.CActive = "active visible-sm visible-xs";
}
@model List<Models.DS_Cap>
@if (ViewBag.NoPairPlayers.Count > 0)
{
    <div style="margin-bottom:1rem; padding:0">
        @*<a href="#players" class="btn btn-success">Đăng kí cặp</a>*@
    </div>
}
<form asp-action="Pair" class="px-0">
    <div style="display:flex">
        <select name="selected" class="form-control" style="width:max-content"> @*Chỗ này không phải lỗi! Để nguyên*@
            <option>Tất cả</option>
            <option value="1">Cặp đã được phê duyệt</option>
            <option value="2">Cặp thiếu chữ kí xác nhận</option>
            <option value="3">Cặp chờ phê duyệt</option>
        </select>
        <input type="submit" formmethod="post" class="mx-2 btn btn-success" value="Cập nhật" />
    </div>
</form>
@for (int i = 0; i < ViewBag.ListLevel.Count; i++)
{
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h5>Trình @ViewBag.ListLevel[i]</h5>
        </div>
        <div class="card-body">
            <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                <table class="table dataTable" id="normalTable">
                    <thead>
                        <tr>
                            <th>Mã cặp</th>
                            <th>VĐV 1</th>
                            <th>VĐV 2</th>
                            <th>Tổng điểm</th>
                            <th>Lệch trình</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int j = 0; j < ViewBag.ListNum[i]; j++)
                        {
                            int total = Model[idCap].VDV1.Diem + Model[idCap].VDV2.Diem;
                            int difference = total - Model[idCap].DS_Trinh.Trinh;
                        <tr>
                            <td>@Model[idCap].Ma_Cap</td>
                            <td>@Model[idCap].VDV1.Ten_Tat</td>
                            <td>@Model[idCap].VDV2.Ten_Tat</td>
                            <td>@total</td>
                            <td>@difference</td>
                            @if (ViewBag.Type == 2) 
                            {
                                <td><button type="button" class="btn btn-warning" data-toggle="ajax-modal" data-target="#updatePair" data-url="@Url.Action("UpdatePair", "CurrentTab", new { pair = Model[idCap].Id})">Xác nhận</button></td>
                            }
                        </tr>
                            idCap++;
                            }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
@if (ViewBag.NoPairPlayers.Count > 0)
{
    <div class="card shadow mb-4" id="players">
        <div class="card-header py-3">
            <h5>VĐV chưa được xếp cặp</h5>
        </div>
        <div class="card-body">
            <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                <div class="table-responsive">
                    <table class="table dataTable" id="normalTable">
                        <thead>
                            <tr>
                                <th>Tên tắt</th>
                                <th>CLB</th>
                                <th>Điểm cũ</th>
                                <th>Điểm</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewBag.NoPairPlayers)
                            {
                                <tr>
                                    <td>@item.Ten_Tat</td>
                                    <td>@item.CLB</td>
                                    <td>@item.Diem_Cu</td>
                                    <td>@item.Diem</td>
                                    <td><button type="button" class="btn btn-warning" data-toggle="ajax-modal" data-target="#updatePair" data-url="@Url.Action("UpdatePair", "CurrentTab", new { idVdv = item.Id })">Đăng kí cặp</button></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}
<!-- Modal placeholder -->
<div id="modal-placeholder"></div>